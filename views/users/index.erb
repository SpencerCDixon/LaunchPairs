<h1> All Users Available </h1>
<table class="table">
  <tr>
    <th>Photo</th>
    <th>Name</th>
    <th>Username</th>
    <th>User ID</th>
    <th>Email</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><img class="tiny-img" src="<%= user['avatar_url'] %>"></td>
    <td><%= user['name'] %></td>
    <td>@<%= user['username'] %></td>
    <td><%= user['uid'] %></td>
    <td><%= user['email'] %></td>
  </tr>
  <% end %>
</table>

<h1> Current Status </h1>
<p> <%= @current_status["status"] %> </p>
<!-- Change Status Form -->
<form action="/users" method="post">
  <label for="status">Status:  </label>
  <input type="text" name="status" id="status" />

  <input type="submit" value="Search" />
</form>
